<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_champion"
        android:layout_width="70dp"
        android:layout_height="200dp"
        android:contentDescription="@string/app_name"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"/>
    <TextView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:id="@+id/item_summoners_name"
        android:textSize="16dp"
        android:textColor="@color/colorWhite"
        android:layout_below="@id/item_champion" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_spell1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="@string/app_name"
            android:layout_below="@id/item_summoners_name"
            />

        <ImageView
            android:id="@+id/item_spell2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="@string/app_name"
            android:layout_below="@id/item_summoners_name"
            android:layout_toRightOf="@id/item_spell1"
            />

    </LinearLayout>


</LinearLayout>
