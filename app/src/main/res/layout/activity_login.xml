<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient"
    tools:context=".ActivityLogin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".8">

        <EditText
            android:id="@+id/activity_log_in_email"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="#11000000"
            android:drawableLeft="@drawable/ic_user"
            android:hint="Email"
            android:textColorHint="#FFFFFF"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/activity_log_in_pass"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_log_in_email"
            android:layout_centerInParent="true"
            android:layout_marginTop="38dp"
            android:drawableLeft="@drawable/ic_pass"
            android:hint="@string/log_in_password"
            android:textColorHint="#FFFFFF"
            android:inputType="textPassword" />

        <android.support.v7.widget.CardView
            android:id="@+id/activity_login_logIn"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@id/activity_log_in_pass"
            android:layout_centerHorizontal="true"
            app:cardBackgroundColor="@color/colorAccent"
            app:cardCornerRadius="25dp"
            android:layout_marginTop="68dp"
            app:cardElevation="10dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/activity_log_in_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LogIn"
                    android:layout_centerInParent="true"
                    android:textColor="#fff"
                    android:textSize="18dp"
                    />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>


</LinearLayout>