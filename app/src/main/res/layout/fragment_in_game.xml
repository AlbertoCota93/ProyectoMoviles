<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/lol_background_selector">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            xmlns:tools="http://schemas.android.com/tools"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp"
            android:orientation="horizontal"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/fragment_inGame_recycler_red"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No games Available"/>

        <android.support.v7.widget.RecyclerView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            xmlns:tools="http://schemas.android.com/tools"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp"
            android:orientation="horizontal"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/fragment_inGame_recycler_blue"/>


    </LinearLayout>


</LinearLayout>