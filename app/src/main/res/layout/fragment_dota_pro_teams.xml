<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dota_background_selector"
    android:orientation="vertical"
    tools:context=".DotaProTeams">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/fragment_dota_proTeams_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/colorWhite"
            android:text="@string/activity_Dota_ProTeams_Title"
            android:layout_marginTop="@dimen/acitivy_lol_home_text_margintop"
            android:layout_marginLeft="@dimen/profile_margin_left"
            android:textSize="@dimen/activity_lol_home_text_size_summonerid"
            android:textStyle="bold"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_dota">

        <ListView
            android:id="@+id/fragment_dota_proTeams_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawSelectorOnTop="false"
            />
    </RelativeLayout>
</LinearLayout>